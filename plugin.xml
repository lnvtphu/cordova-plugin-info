<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-android-info" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>AndroidInfo</name>

    <description>Android Info Plugin</description>
    <license>Apache 2.0</license>
    <keywords>android, info</keywords>

    <engines>
      <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module name="AndroidInfo" src="www/AndroidInfo.js">
        <clobbers target="AndroidInfo" />
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="AndroidInfo">
                <param name="android-package" value="com.info.AndroidInfo" />
            </feature>
        </config-file>

        <source-file src="src/android/AndroidInfo.java" target-dir="src/com/info/android-info" />
    </platform>
</plugin>